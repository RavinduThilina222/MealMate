<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Vertical Navigation Bar -->
    <LinearLayout
        android:id="@+id/adminNavBar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#F0873A"
        android:gravity="top"
        android:orientation="vertical"
        android:padding="16dp"
        tools:ignore="MissingConstraints">

        <!-- Menu Item -->
        <Button
            android:id="@+id/btnMenus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:drawablePadding="8dp"
            android:gravity="start|center_vertical"
            android:padding="8dp"
            android:text="Menus"
            android:textColor="@android:color/white"
            app:icon="@drawable/ic_menu"
            android:onClick="onMenuPressed"/>

        <!-- Orders Item -->
        <Button
            android:id="@+id/btnOrders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:drawablePadding="8dp"
            android:gravity="start|center_vertical"
            android:padding="8dp"
            android:text="Orders"
            android:textColor="@android:color/white"
            app:icon="@drawable/ic_orders"
            app:iconSize="18dp" />

        <!-- Customers Item -->
        <Button
            android:id="@+id/btnCustomers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="start|center_vertical"
            android:text="Customers"
            android:textColor="@android:color/white"
            app:icon="@drawable/ic_customers"
            android:drawablePadding="8dp"
            android:padding="8dp" />

        <!-- Branches Item -->
        <Button
            android:id="@+id/btnBranches"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="start|center_vertical"
            android:text="Branches"
            android:textColor="@android:color/white"
            app:icon="@drawable/ic_branches"
            android:drawablePadding="8dp"
            android:padding="8dp" />

        <!-- Analytics Item -->
        <Button
            android:id="@+id/btnAnalytics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="start|center_vertical"
            android:text="Analytics"
            android:textColor="@android:color/white"
            app:icon="@drawable/ic_analytics"
            android:drawablePadding="8dp"
            android:padding="8dp" />

        <!-- Promotion Item -->
        <Button
            android:id="@+id/btnPromotion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="start|center_vertical"
            android:text="Promotion"
            android:textColor="@android:color/white"
            app:icon="@drawable/ic_promotion"
            android:drawablePadding="8dp"
            android:padding="8dp" />

        <!-- Notification Item -->
        <Button
            android:id="@+id/btnNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="start|center_vertical"
            android:text="Notification"
            android:textColor="@android:color/white"
            app:icon="@drawable/ic_notification"
            android:drawablePadding="8dp"
            android:padding="8dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
